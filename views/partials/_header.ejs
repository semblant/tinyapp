<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div class="login information">
      <% for (let userId in users) { %>

        <% if (users[userId]) { %>
          <label>Logged in as: <%= users[userId].email %></label>
          <form method="POST" action="/logout">
            <button type="submit">Logout</button>
          </form>
        <% } else { %>
          <!-- Show the login form if no user is logged in -->
          <form method="POST" action="/login">
            <label for="email">Email</label>
            <input id="email" name="email" placeholder="username">
            <button type="submit">Login</button>
          </form>
        <% } %>
      <% } %>
    </div>
  </nav>
</header>